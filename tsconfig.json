{
    // Used to type-check in the editor
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
        "outDir": "./build",
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "types": ["@iobroker/types"]
    },
    "include": [
      "./src/**/*.js",
      "./src/**/*.jsx",
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./src/**/*.d.ts"
    ],
    "exclude": ["gulpfile.js"]
  }
